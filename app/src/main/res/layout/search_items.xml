<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_imageid"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_settings_cell_black_24dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/searchTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/search_imageid"
        app:layout_constraintBottom_toBottomOf="@+id/search_imageid"
        app:layout_constraintTop_toTopOf="@+id/search_imageid"
        android:layout_marginEnd="10dp"
        android:text="demoooooooo"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/searchPriceTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/search_imageid"
        app:layout_constraintStart_toStartOf="@+id/searchTv"
        app:layout_constraintTop_toBottomOf="@+id/searchTv"
    android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="demoooooooo"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@+id/searchTv"
        android:layout_marginStart="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>