<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_curve"
    android:layout_height="wrap_content">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_pay_layercl"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <RadioGroup
            android:id="@+id/paymentMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/pay_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pay_id"
            >
            <RadioButton
                android:id="@+id/addresstypeIdBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:textSize="10sp" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pay_id"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="@string/credit_debit"
            android:textSize="12sp"

            android:layout_marginStart="10dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/ordr_id"

            app:layout_constraintStart_toEndOf="@+id/paymentMode"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            ></androidx.appcompat.widget.AppCompatTextView>

        <View
            android:id="@+id/pay_view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_margin="10dp"
            android:background="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pay_id" />

