<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
   android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/addresscartIV"
    android:layout_width="45dp"
    android:layout_height="50dp"
    android:src="@drawable/menshirt"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_margin="12dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/estimatedTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estimated Delivery: 3 Oct 2019"
        android:textSize="11sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="14.5dp"
        android:layout_marginTop="12dp"

        app:layout_constraintStart_toEndOf="@+id/addresscartIV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_delivery"
        android:textSize="12sp"
       app:layout_constraintStart_toEndOf="@+id/addresscartIV"
        android:layout_marginStart="14.5dp"
        android:layout_marginTop="4dp"
        android:textColor="#06ad1e"
        app:layout_constraintTop_toBottomOf="@+id/estimatedTv"/>
    <View
        android:layout_width="262.5dp"
        android:layout_height="0.5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addresscartIV"
        android:background="@color/colorBlack"
        android:layout_marginStart="57dp"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>