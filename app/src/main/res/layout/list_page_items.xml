<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:background="@color/colorWhite"
        android:layout_margin="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/listPage_IV"
            android:layout_width="167.5dp"
            android:layout_height="175dp"
            android:src="@drawable/menshirts"
        android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_constraint"
            android:layout_margin="10dp"
            android:layout_width="167.5dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/listPage_IV"
            app:layout_constraintStart_toStartOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_id"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
          android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="500 SAR"

            android:ellipsize="end"
            android:singleLine="true"

            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/special_prize_txt_id"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginEnd="60dp"
            android:text="4000000"
            android:ellipsize="end"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="@+id/text_id"
            app:layout_constraintTop_toTopOf="@+id/text_id"
android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/symbolId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="10sp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_id"
            app:layout_constraintTop_toTopOf="@+id/text_id"
            app:layout_constraintStart_toEndOf="@+id/special_prize_txt_id"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/percentage_txt_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_id"
            app:layout_constraintTop_toTopOf="@+id/text_id"
            app:layout_constraintStart_toEndOf="@+id/symbolId"
            android:text="30%"
            android:textColor="@color/colorPink"
            android:textSize="10sp"
            android:ellipsize="end"
            android:visibility="invisible"
            android:singleLine="true"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatTextView
             android:id="@+id/text_id1"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@+id/first_constraint"
             app:layout_constraintStart_toStartOf="parent"
             android:ellipsize="end"
             android:singleLine="true"
             android:layout_margin="10dp"
             android:textColor="@color/colorBlack"
             android:textSize="12sp"

             android:text="Baby pink copy"
    ></androidx.appcompat.widget.AppCompatTextView>






<RatingBar
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3.5"
       android:layout_margin="10dp"
        android:progressTint="#ff0000"
    android:visibility="invisible"
        android:secondaryProgressTint="#ff0000"
        app:layout_constraintTop_toBottomOf="@+id/text_id1"
        app:layout_constraintStart_toStartOf="parent"
/>
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
             android:layout_margin="10dp"
           android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ratingBar"
            app:layout_constraintTop_toBottomOf="@id/text_id1"
            app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
            android:text="(75)"/>


</androidx.constraintlayout.widget.ConstraintLayout>