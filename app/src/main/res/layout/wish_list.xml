<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="290dp"
android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_marginStart="10dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Image_id"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></androidx.appcompat.widget.AppCompatImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_constraint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Image_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:weightSum="5">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:text="500SAR"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_weight="3"
        android:textColor="@color/colorBlack"
      ></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/special_prize_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"

android:visibility="invisible"
            android:singleLine="true"
            android:text="500000"
            android:ellipsize="end"

            ></androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/percentage_txt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-30%"
            android:visibility="invisible"
            android:textColor="@color/colorPink"
            android:singleLine="true"
            android:ellipsize="end"
            ></androidx.appcompat.widget.AppCompatTextView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/text_id1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Yo Yo Honey Singh Photoshoot in Green..."
        app:layout_constraintTop_toBottomOf="@+id/first_constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        ></androidx.appcompat.widget.AppCompatTextView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wishlistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/text_id1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:text="@string/move_to_bag"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="#fc0000"
        ></androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wishListRemove"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@id/wishlistName"
        app:layout_constraintBottom_toBottomOf="@id/wishlistName"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/remove"
       android:layout_marginEnd="5dp"
        android:textColor="#fc0000"
        ></androidx.appcompat.widget.AppCompatTextView>



</androidx.constraintlayout.widget.ConstraintLayout>
