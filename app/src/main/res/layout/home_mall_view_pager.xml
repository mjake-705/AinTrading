<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ain.trading.customviews.AutoViewPager
            android:id="@+id/banner_ViewPager"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bar_layout"
            android:layout_width="220dp"
            android:layout_height="18.5dp"
            android:layout_marginTop="208.5dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/freeship_background"
           >




    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/track_icon_id"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/track_icon"

    />


    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/free_shipping"
         android:fontFamily="@font/lato_medium"

           android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/colorWhite"
          app:layout_constraintStart_toEndOf="@id/track_icon_id"
app:layout_constraintBottom_toBottomOf="@+id/track_icon_id"

            app:layout_constraintTop_toTopOf="@+id/track_icon_id"/>






    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bar_layout1"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginStart="8dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/topbarcolr"
        >


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sreach_icon_id"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/sreach_icon"

            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bell_icon_id"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="1dp"

           android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@+id/sreach_icon_id"
            app:layout_constraintTop_toTopOf="@+id/sreach_icon_id"
            app:layout_constraintBottom_toBottomOf="@+id/sreach_icon_id"
            android:src="@drawable/bell_icon"

            />
   <!--     <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notification_NO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="4sp"
            app:layout_constraintBottom_toTopOf="@+id/bell_icon_id"/>-->


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>