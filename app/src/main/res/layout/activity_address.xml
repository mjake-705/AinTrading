<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context=".ui.activity.NewAddress.NewAddressActivity">
    <include
        android:id="@+id/new_addressToolbar"
        layout="@layout/app_bar_center_title"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/new_addressToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_LL">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edit_aboutToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="16.5dp"
            >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/newAddressCL"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="80dp"
    android:layout_marginTop="16.5dp"
>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enterAddress_CL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16.5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:background="@drawable/background_curve"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_layout_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_address_id"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:singleLine="true"
                android:textSize="10sp"

                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobileNo_layout_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/name_layout_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mobileNoAdress_id"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:hint="@string/mobileno"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="10sp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pincode_layout_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/mobileNo_layout_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pincodeAddress_id"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:hint="@string/pincode"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="10sp"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/address_layout_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/pincode_layout_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addressPerson_id"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:singleLine="true"
                android:textSize="10sp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/town_layout_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/address_layout_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/townAddress_id"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:hint="@string/town"
                android:singleLine="true"
                android:textSize="10sp"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/stateAddress_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/state"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:singleLine="true"
            android:textSize="10sp"
            android:paddingTop="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/town_layout_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/spinerSymbol"
            android:layout_width="13dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toTopOf="@+id/stateAddress_id"
            app:layout_constraintEnd_toEndOf="@+id/stateAddress_id"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/stateAddress_id"
            android:src="@drawable/arrow_down"/>
        <View
            android:id="@+id/state_view_Id"
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stateAddress_id"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorBlack"
            android:layout_marginBottom="20dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cityAddress_id"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/city"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/state_view_Id" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/city_spiner"
            android:layout_width="13dp"
            android:layout_height="8dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintTop_toTopOf="@+id/cityAddress_id"
            app:layout_constraintEnd_toEndOf="@+id/cityAddress_id"
            app:layout_constraintBottom_toBottomOf="@+id/cityAddress_id"
            android:layout_marginEnd="10dp"

            android:src="@drawable/arrow_down"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityAddress_id"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorBlack"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/typeBaseCl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_curve"
        app:layout_constraintTop_toBottomOf="@+id/enterAddress_CL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="19.5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/typeOfAddressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15.5dp"
            android:layout_marginStart="20dp"
            android:textSize="9sp"
            android:text="@string/typeofaddress"/>

        <LinearLayout
            android:id="@+id/addressRadioLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/typeOfAddressTV"
            android:layout_marginTop="17dp"
            app:layout_constraintStart_toStartOf="parent">

            <RadioGroup
                android:id="@+id/radioAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="19dp">
                <RadioButton
                    android:id="@+id/home_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:text="@string/home" />
                <RadioButton
                    android:id="@+id/office_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/office"
                    android:layout_marginStart="50dp"
                    android:textSize="10sp"
                    android:layout_gravity="center_horizontal"
                    />
            </RadioGroup>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/mydefaultadrsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/addressRadioLL"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/default_address"
            android:layout_marginStart="17.5dp"
            android:layout_marginTop="17dp"
        android:layout_marginBottom="10dp"
            android:textSize="10sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/bottom_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newaddress_cancelBaseCL"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:layout_marginEnd="0.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >


            <androidx.appcompat.widget.AppCompatTextView

                android:id="@+id/newaddress_cancel_Tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:text="@string/cancel"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/new_address_saveBaseCL"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:background="@color/colorPink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/new_address_save_Tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:text="@string/save"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>