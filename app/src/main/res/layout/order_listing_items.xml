<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorWhite">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/order_item_Iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"

            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/shoesimage"
            app:layout_constraintEnd_toStartOf="@+id/ordrs_scndcl"
            app:layout_constraintTop_toTopOf="@+id/ordrs_scndcl"
            app:layout_constraintBottom_toBottomOf="@+id/ordrs_scndcl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ordr_frst_view"
            ></androidx.appcompat.widget.AppCompatImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ordrs_scndcl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/order_item_Iv">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/newcolths"
                android:layout_width="0dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="New Cloths=Great Idea"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/colorBlack"
                android:textSize="9sp"
                android:textStyle="bold"
                ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/price_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="inddus"
                android:textSize="10sp"
                android:textColor="#333333"
                app:layout_constraintTop_toBottomOf="@+id/newcolths"
                app:layout_constraintStart_toStartOf="parent"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/order_id"
                android:textSize="10sp"
                android:textColor="#333333"
                app:layout_constraintTop_toBottomOf="@+id/price_id">
            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_id_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/order_id"
                android:text=""
                android:textSize="10sp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/order_id"
                app:layout_constraintBottom_toBottomOf="@+id/order_id"
                android:textColor="#333333"
               >
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/qua_id_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/qty"
                android:textColor="@color/litgren"
                app:layout_constraintTop_toBottomOf="@+id/order_id"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="10sp"
                ></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/quan_id_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPink"
                android:layout_marginStart="10dp"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/qua_id_tv"
                app:layout_constraintTop_toTopOf="@+id/qua_id_tv"
                app:layout_constraintBottom_toBottomOf="@+id/qua_id_tv"
                ></androidx.appcompat.widget.AppCompatTextView>



        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/ordr_frst_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlack"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ordrs_scndcl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>