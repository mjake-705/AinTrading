<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:background="@color/colorWhite">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recomended_IV"
        android:layout_width="0dp"
        android:layout_height="247dp"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/shoesimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_child_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:gravity="start"
        android:paddingStart="3dp"
        android:singleLine="true"
        android:text="UNDER ARMOR"

        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recomended_IV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recom_nameTV"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:gravity="start"
        android:paddingStart="3dp"
        android:singleLine="true"
        android:text="Glamor shoes"

        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_child_tv" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recom_nameTV"

        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recom_priceTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight=".8"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:gravity="start"
            android:paddingStart="3dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text="300"
            android:textColor="#fc2d6c"
            android:textSize="12sp"
            android:textStyle="bold" />

       <!-- <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/recom_saveTV"
